{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "comma-dangle": "off",
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "prefer-const": "warn",
    "arrow-parens": "off",
    "prefer-destructuring": "off",
    "no-param-reassign": "warn",
    "no-restricted-syntax": "off",
    "arrow-body-style": "warn"
  },
  "ignorePatterns": ["dist*", "test"]
}
